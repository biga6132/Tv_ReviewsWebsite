<%- include('../partials/header'); -%>
<%- include('../partials/menu') %>

<body>
<main>
    <div class="container" style="padding: 2%; ">
        <div class="container">
          <h2 style="text-align: center;">Tv Show Review</h2>
        </div>
        
          
          <div class="container-fluid" style="padding: 2%;">
            <form class="" action="/filter" method="GET">
            <div class="row">
              <div class="col-10">
                <input class="form-control" type="text" id="movie_name" name="movie_name" placeholder="Enter Tv Show Title">
              </div>
              <div class="col-2">
                <input class="btn btn-primary" type="submit" name="filtered" value = "Filter">          
              </div>
            </div>
          </form>
        </div>
        <div class="container-lg" style="margin-top: 2%;">
            <table class="table">
              <thead>
              <tr>
                <th scope="col">Tv show</th>
                <th scope="col">Review</th>
                <th scope="col">Review Date</th>
              </tr>
              </thead>
              <tbody>
                <%
			if (items) { 
			    var table_data = '';
				  items.forEach(function(item){
			  		table_data += '<tr> <td>' + item.tv_name + '</td> <td>' + item.review + '</td> <td>' + item.review_date + '</td>';
						 
			  	 }); 
           table_data += '</tbody></table>'
           %>
			  	 <%- table_data %> 
			<% } %>




</main>
<%- include('../partials/footer'); -%>
</body>